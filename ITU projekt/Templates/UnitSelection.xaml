<UserControl x:Class="ITU_projekt.Templates.UnitSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:ITU_projekt.Templates"
            mc:Ignorable="d" >
    <Grid>
    <!-- Define 8 rows and 1 column -->
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <!-- Place buttons in each row -->
        <Button Content="Unit 1" Grid.Row="0" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 1" />
        <Button Content="Unit 2" Grid.Row="1" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 2" />
        <Button Content="Unit 3" Grid.Row="2" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 3" />
        <Button Content="Unit 4" Grid.Row="3" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 4" />
        <Button Content="Unit 5" Grid.Row="4" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 5" />
        <Button Content="Unit 6" Grid.Row="5" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 6" />
        <Button Content="Unit 7" Grid.Row="6" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 7" />
        <Button Content="Unit 8" Grid.Row="7" Width="40" Height="40" Margin="5" Command="{Binding DataContext.ButtonClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Unit 8" />
    </Grid>
</UserControl>

<UserControl x:Class="ITU_projekt.Templates.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITU_projekt.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Select a Unit:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <!-- Buttons for units; these could be dynamically generated if needed -->
            <Button Content="Unit 1" Margin="5" Click="OnUnitSelected"/>
            <Button Content="Unit 2" Margin="5" Click="OnUnitSelected"/>
            <Button Content="Unit 3" Margin="5" Click="OnUnitSelected"/>
        </StackPanel>
    </Grid>
</UserControl>
